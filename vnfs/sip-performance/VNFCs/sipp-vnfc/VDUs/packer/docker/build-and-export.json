{
  "builders": [
    {
      "type": "docker",
      "image": "ubuntu",
      "export_path": "./targets/docker/sipp-vnfc.tar",
      "changes": [
           "EXPOSE 5060 22",
           "CMD /usr/bin/supervisord"
	  ]
    }],
  "provisioners": [
    {
     "type": "file",
     "source": "../../software/",
     "destination": "/opt"
    },
    {
     "type": "shell",
     "inline": ["mkdir -p /etc/supervisor/conf.d"]
    },
    {
     "type": "file",
     "source": "./config/supervisord.conf",
     "destination": "/etc/supervisor/conf.d/supervisord.conf"
    },
    {
     "type": "shell",
     "scripts": [
      "../../common/scripts/docker-init.sh",
      "../../common/scripts/sipp-install.sh"
     ]
    }
  ],
  "variables": {
  }
}
