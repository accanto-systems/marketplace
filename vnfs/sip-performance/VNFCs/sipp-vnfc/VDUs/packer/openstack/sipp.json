{
  "builders": [
    {
      "type": "openstack",
      "identity_endpoint": "http://<YOUR OPENSTACK>/identity/v3",
      "tenant_name": "<YOUR OPENSTACK TENANT NAME>",
      "domain_name": "Default",
      "username": "<YOUR OPENSTACK USERNAME>",
      "password": "<YOUR OPENSTACK PASSWORD>",
      "region": "RegionOne",
      "networks": ["<PRIVATE NETWORK>"],
      "floating_ip_network":"<PUBLIC NETWORK>",
      "ssh_username": "ubuntu",
      "ssh_keypair_name": "<KEYPAIR NAME>",
      "ssh_private_key_file":"<KEYPAIR PEM>", 
      "image_name": "sipp",
      "source_image": "<XENIAL IMAGE ID>",
      "flavor": "m1.small",
      "security_groups":["<YOUR SECURITY GROUP>"],
      "insecure": "true",
      "user_data": "#cloud-config\nmanage_etc_hosts: true\nbootcmd:\n - [ sh, -c, echo 'nameserver 8.8.8.8' > /etc/resolv.conf ]\npackage_update: false"
    }
  ],
  "provisioners": [
    {
      "environment_vars": [
        "HOME_DIR=/home/ubuntu"
      ],
      "execute_command": "echo 'ubuntu' | {{.Vars}} sudo -S -E sh -eux '{{.Path}}'",
      "expect_disconnect": true,
      "type": "shell",
      "inline": ["sudo chmod 777 /opt"]
    },
    {
      "type": "file",
      "source": "../../software/",
      "destination": "/opt"
    },
    {
      "environment_vars": [
        "HOME_DIR=/home/ubuntu"
      ],
      "execute_command": "echo 'ubuntu' | {{.Vars}} sudo -S -E sh -eux '{{.Path}}'",
      "expect_disconnect": true,
      "type": "shell",
      "scripts": [
        "../../common/scripts/sipp-install.sh"
      ]
    }
  ]
}
